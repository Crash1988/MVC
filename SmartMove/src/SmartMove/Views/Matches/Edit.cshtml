@model SmartMove.Models.Match

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Match</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MatchId" />
        <div class="form-group">
            <label asp-for="GuestPoints" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="GuestPoints" class="form-control" />
                <span asp-validation-for="GuestPoints" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GuestTeamId" class="control-label col-md-2">GuestTeamId</label>
            <div class="col-md-10">
                <select asp-for="GuestTeamId" class="form-control" />
                <span asp-validation-for="GuestTeamId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HomePoints" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="HomePoints" class="form-control" />
                <span asp-validation-for="HomePoints" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HomeTeamId" class="control-label col-md-2">HomeTeamId</label>
            <div class="col-md-10">
                <select asp-for="HomeTeamId" class="form-control" />
                <span asp-validation-for="HomeTeamId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WiningTeam" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="WiningTeam" class="form-control" />
                <span asp-validation-for="WiningTeam" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="playday" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="playday" class="form-control" />
                <span asp-validation-for="playday" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
