@model IEnumerable<SmartMove.Models.Match>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            Gest Team
        </th>
        <th>
            Home Team
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatchDate)
        </th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GuestTeam.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeTeam.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MatchDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WinnerTeam.Name)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.MatchId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.MatchId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.MatchId">Delete</a>
        </td>
    </tr>
}
</table>
