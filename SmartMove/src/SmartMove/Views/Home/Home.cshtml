@model IEnumerable<SmartMove.Models.Vote>

@{
    ViewData["Title"] = "Home";
}

<h2>Home</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateVoted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VotedTeam)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateVoted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VotedTeam)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.VoteId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.VoteId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.VoteId">Delete</a>
        </td>
    </tr>
}
</table>
